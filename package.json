{
  "name": "minecraft-rcon",
  "displayName": "Minecraft RCON",
  "description": "A powerful RCON client for Minecraft servers with advanced fragmentation support",
  "version": "2.1.1",
  "icon": "images/icon.png",
  "license": "MIT",
  "publisher": "jaketcooper",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaketcooper/minecraft-rcon"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "contributes": {
    "commands": [
      {
        "command": "minecraftRcon.connect",
        "title": "Minecraft RCON: Connect to Server",
        "category": "Minecraft RCON",
        "icon": "$(terminal)"
      },
      {
        "command": "minecraftRcon.connectNew",
        "title": "Minecraft RCON: Connect with New Credentials",
        "category": "Minecraft RCON",
        "icon": "$(terminal)"
      },
      {
        "command": "minecraftRcon.saveDefaults",
        "title": "Minecraft RCON: Save Current Connection as Default",
        "category": "Minecraft RCON",
        "icon": "$(terminal)"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "minecraftRcon.terminal",
          "title": "Minecraft Server"
        }
      ]
    },
    "configuration": {
      "title": "Minecraft RCON",
      "properties": {
        "minecraftRcon.defaultHost": {
          "type": "string",
          "default": "",
          "description": "Default RCON host address"
        },
        "minecraftRcon.defaultPort": {
          "type": "number",
          "default": null,
          "description": "Default RCON port"
        }
      }
    }
  }
}
