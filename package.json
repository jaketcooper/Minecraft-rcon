{
  "name": "minecraft-rcon",
  "displayName": "Minecraft RCON",
  "description": "A minimal RCON client for Minecraft servers inside VS Code (prototype)",
  "version": "1.0.0",
  "publisher": "jaketcooper",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:minecraftRcon.connect"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "rcon-client": "^4.2.5"
  },
  "contributes": {
    "commands": [
      {
        "command": "minecraftRcon.connect",
        "title": "Minecraft RCON: Connect",
        "icon": "$(plug)"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "minecraftRcon.terminal",
          "title": "Minecraft Server",
          "icon": "server"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Minecraft RCON",
      "properties": {
        "minecraftRcon.defaultHost": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default RCON host"
        },
        "minecraftRcon.defaultPort": {
          "type": "number",
          "default": 25565,
          "description": "Default RCON port"
        },
        "minecraftRcon.defaultPassword": {
          "type": "string",
          "default": "",
          "description": "Default RCON password"
        }
      }
    }
  }
}